@import mem;

const len = (size_t)10;

@test "normal malloc" {
    const a = mem.alloc_array<int32_t>(len);
    @defer mem.drop(a);

    const b = mem.alloc_array<int8_t>(len);
    @defer mem.drop(b);
}

// TODO: design this in a better way
@test "joint malloc" {
    @unpack(const a, const b) = @joint<int32_t, int8_t>(
        mem.alloc_array,
        len
    );
    @defer mem.drop(a);
}