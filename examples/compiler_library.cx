@import cxc;

@test "compiling files at runtime and jitting them" {
    // the source code is embedding itself
    const source_code = @embed("compiler_library.cx");
    // a very easy api (compiles the source code down to llvm bit code)
    // the compilation is not related in any way to `compiler_library.cx`
    const bicode = cxc.compile_to_llbc(source_code);
    // launches the main
    cxc.jit_llbc(bitcode);
}

